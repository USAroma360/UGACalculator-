<body>
    <div class="calculator-container">
        <h2>UGA CALCULATOR</h2>
        <select id="formulaSelect">
            <option value="0.82">12.99% (X * 0.82 * 36)</option>
            <option value="0.78">16.99% (X * 0.78 * 36)</option>
            <option value="0.77">17.99% (X * 0.77 * 36)</option>
        </select>
        <input type="number" id="xInput" placeholder="Enter value for X" min="0" step="any">
        <button onclick="calculate()">Calculate</button>
        <div id="result">Total: 0</div>
        <div class="footnote">All RISA prompts please refer to the hand out</div>
    </div>

    <script>
        function calculate() {
            const formulaSelect = document.getElementById('formulaSelect');
            const xInput = document.getElementById('xInput');
            const resultDiv = document.getElementById('result');

            const multiplier = parseFloat(formulaSelect.value);
            const x = parseFloat(xInput.value);

            if (isNaN(x)) {
                resultDiv.textContent = 'Please enter a valid number for X';
                return;
            }

            const result = (x * multiplier) * 36;
            resultDiv.textContent = `Total: ${result.toFixed(2)}`;
        }
    </script>
